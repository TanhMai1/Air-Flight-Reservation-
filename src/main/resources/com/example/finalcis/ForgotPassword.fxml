<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalcis.LoginController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>
<children>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please answer the following question" textAlignment="CENTER" wrappingWidth="300.375">
        <font>
            <Font size="20.0" />
        </font>
    </Text>
    <Label text="Enter your username" />
    <TextField fx:id="usernameField" promptText="Username" />
    <Label text="What's your favorite color?" />
    <TextField fx:id="answer" promptText="Enter your answer" />
    <Button mnemonicParsing="false" onAction="#forgotPassword" text="Validate" />
    <Label fx:id="usernameRetrieved" textFill="green"/>
    <Label fx:id="wrongAnswer" textFill="red"/>
</children>
</VBox>
