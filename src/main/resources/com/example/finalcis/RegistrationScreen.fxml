<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="465.0" prefWidth="359.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalcis.Registration">
    <children>
      <Text layoutX="100.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registration" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Text>

              <Label layoutX="60.0" layoutY="68.0" text="First Name:" />
        <TextField fx:id="firstName" layoutX="150.0" layoutY="64.0" promptText="Enter your first name" />

        <Label layoutX="60.0" layoutY="103.0" text="Last Name:" />
        <TextField fx:id="lastName" layoutX="150.0" layoutY="99.0" promptText="Enter your last name" />

        <Label layoutX="60.0" layoutY="138.0" text="Address:" />
        <TextField fx:id="address" layoutX="150.0" layoutY="134.0" promptText="Enter your address" />

        <Label layoutX="60.0" layoutY="173.0" text="Zipcode:" />
        <TextField fx:id="zipcode" layoutX="150.0" layoutY="169.0" promptText="Enter your zipcode" />

        <Label layoutX="60.0" layoutY="208.0" text="State:" />
        <TextField fx:id="state" layoutX="150.0" layoutY="204.0" promptText="Enter your state" />

        <Label layoutX="60.0" layoutY="243.0" text="Username:" />
        <TextField fx:id="username" layoutX="150.0" layoutY="239.0" promptText="Enter your username" />

        <Label layoutX="60.0" layoutY="278.0" text="Password:" />
        <PasswordField fx:id="password" layoutX="150.0" layoutY="274.0" promptText="Enter your password" />

        <Label layoutX="60.0" layoutY="313.0" text="Email:" />
        <TextField fx:id="email" layoutX="150.0" layoutY="309.0" promptText="Enter your email" />

        <Label layoutX="60.0" layoutY="348.0" text="SSN:" />
        <TextField fx:id="ssn" layoutX="150.0" layoutY="344.0" promptText="Enter your SSN" />

      <Label layoutX="50.0" layoutY="382.0" text="Security Question" />
      <TextField fx:id="securityQuestion" layoutX="150.0" layoutY="380.0" promptText="Favorite color?" />

        <Button layoutX="150.0" layoutY="426.0" mnemonicParsing="false" onAction="#Register" text="Register" />
        <Label fx:id="successMessageLabel" textFill="green" /> <!-- Label to show if registration was successful -->
        <Label fx:id="failedMessageLabel" textFill="red" /> <!-- Label to show if registration failed -->
    </children>
</AnchorPane>
